page {
  width: 100%;
  height: 100%;
}
page .index-container {
  width: 100%;
  height: 100%;
}
page .index-container .top {
  width: 100%;
  height: 20%;
}
page .index-container .top .title {
  width: 90%;
  text-align: center;
}
page .index-container .top .title .date {
  color: #373737;
  letter-spacing: 8rpx;
}
page .index-container .top .title .line {
  width: 130rpx;
  border-top: 4rpx solid #E7E7E7;
  margin: 24rpx auto;
}
page .index-container .top .title .sub-title {
  color: #454545;
}
page .index-container .rich-text {
  padding: 100rpx 3%;
  font-size: 32rpx;
}
page .index-container .rich-text img {
  width: 100%;
}
