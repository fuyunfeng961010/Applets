page {
  width: 100%;
  height: 100%;
}
page .new-album-container {
  width: 100%;
  height: 100%;
}
page .new-album-container .new-album-form {
  padding: 30rpx 4% 30rpx 4%;
  height: calc(96% - 180rpx);
}
page .new-album-container .new-album-form .album-name {
  padding-bottom: 20rpx;
  position: relative;
}
page .new-album-container .new-album-form .album-name input {
  height: 2rem;
}
page .new-album-container .new-album-form .photo-album-list {
  max-height: calc(100% - 80rpx);
  margin-top: 50rpx;
  overflow: scroll;
  display: flex;
  justify-content: flex-left;
  flex-wrap: wrap;
}
page .new-album-container .new-album-form .photo-album-list .album-item {
  width: 33%;
  margin-right: .5%;
  margin-top: .5%;
  text-align: center;
}
page .new-album-container .new-album-form .photo-album-list .album-item:nth-child(3n) {
  margin-right: 0;
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box-add {
  background: #EBF2FA;
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box {
  display: inline-block;
  width: 100%;
  position: relative;
  vertical-align: middle;
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box image {
  position: absolute;
  left: 0%;
  top: 0%;
  width: 100%;
  height: 100%;
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box .icondel-x::before {
  font-size: 30rpx;
  color: white;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box .album-add-icon {
  font-size: 75rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box .album-add-icon:before {
  color: #D0D4DF;
}
page .new-album-container .new-album-form .photo-album-list .album-item .album-box:before {
  content: "";
  display: inline-block;
  padding-bottom: 100%;
  width: .1px;
  vertical-align: middle;
}
page .new-album-container .submit-btn {
  width: 92%;
  height: 80rpx;
  border-radius: 40rpx;
  background: #1AAD19;
  position: absolute;
  left: 50%;
  bottom: 4%;
  transform: translateX(-50%);
  color: white;
}
